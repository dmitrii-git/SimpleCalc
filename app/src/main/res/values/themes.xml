<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleCalc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/CalcButton</item>



    </style>

    <style name="YourApplicationTheme" parent="android:style/Theme.NoTitleBar">
        <item name="android:buttonStyle">@style/button</item>


    </style>

    <style name="YourApplicationThemeGreen" parent="android:style/Theme.NoTitleBar">
        <item name="android:background">@color/green</item>
        <item name="android:textSize">@dimen/CalcButton</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/white</item>






    </style>

    <style name="YourApplicationThemeBlue" parent="android:style/Theme.NoTitleBar">
        <item name="android:background">@color/blue</item>
        <item name="android:textSize">@dimen/CalcButton</item>
        <item name="colorPrimary">@color/red_500</item>
        <item name="android:textColor">@color/white</item>



    </style>
    <style name="YourApplicationThemeRed" parent="android:style/Theme.NoTitleBar">
        <item name="android:background">@color/red</item>
        <item name="android:navigationBarColor">@color/red_500</item>
        <item name="android:statusBarColor">@color/red_800</item>
        <item name="android:textSize">@dimen/CalcButton</item>



    </style>


    <style name="button" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        MySimpleButton
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/CalcButton</item>

    </style>

    <style name="actionButton">MySimpleActionButton
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textSize">@dimen/CalcButton</item>

    </style>

    <style name="equalsButton">MySimpleEqualsButton
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textSize">@dimen/CalcButton</item>

    </style>

    <style name="themeButton">MySimpleThemeButton
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/ThemeButton</item>
        <item name="android:layout_gravity">center</item>

    </style>


</resources>